<div id="projects-page" class="projects"> 
    <h1>Projects</h1>
    
    <% if (projects && projects.length > 0) { %>
        <% projects.forEach(project => { %>
            <h5><%= project.title %></h5>
            <p><%= project.description %></p>
            
            <% if (project.technologies) { %>
                <p><strong>Technologies:</strong> <%= project.technologies %></p>
            <% } %>
            
            <% if (project.github_link || project.live_link) { %>
                <p>
                    <% if (project.github_link) { %>
                        <a href="<%= project.github_link %>" target="_blank">GitHub</a>
                    <% } %>
                    <% if (project.github_link && project.live_link) { %> | <% } %>
                    <% if (project.live_link) { %>
                        <a href="<%= project.live_link %>" target="_blank">View Live</a>
                    <% } %>
                </p>
            <% } %>
            
            <% if (project.image_path) { %>
                <img src="<%= project.image_path %>" alt="<%= project.title %>" style="max-width: 100%; height: auto;">
            <% } %>
            
            <hr>
        <% }); %>
    <% } else { %>
        <p>No projects have been added yet. Please check back later!</p>
    <% } %>
</div>
<hr>