<h1 class="page-title">Page Content</h1>

<div class="card">
    <p style="margin-bottom: 20px;">Select a page to edit its content:</p>
    
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 20px;">
        <% const pageDescriptions = {
            home: 'Edit homepage hero text and introductory content',
            about: 'Update your bio, skills, and personal information',
            contact: 'Manage contact information and form settings'
        }; %>
        
        <% pages.forEach(page => { %>
            <div class="card" style="cursor: pointer;" onclick="window.location.href='/admin/pages/<%= page.page_name %>'">
                <h3 style="text-transform: capitalize;"><%= page.page_name %> Page</h3>
                <p style="color: #666; margin-bottom: 15px;">
                    <%= pageDescriptions[page.page_name] || 'Edit content for this page' %>
                </p>
                <a href="/admin/pages/<%= page.page_name %>" class="btn btn-primary btn-sm">Edit Content</a>
            </div>
        <% }); %>
    </div>
</div>