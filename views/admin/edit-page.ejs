<h1 class="page-title">Edit <%= pageName %> Page</h1>

<div class="card">
    <form method="POST" action="/admin/pages/<%= pageName %>">
        <% const sectionHelp = {
            hero_title: 'The main heading on your homepage',
            hero_subtitle: 'The subheading that appears below your name',
            bio: 'Your professional biography and background',
            hobbies: 'Your personal interests and hobbies',
            tagline: 'A short tagline about yourself',
            quote: 'An inspirational quote',
            quote_author: 'The author of the quote',
            skills: 'Your technical and professional skills',
            email: 'Your contact email address',
            phone: 'Your phone number',
            location: 'Your location or timezone'
        }; %>
        
        <% sections.forEach(section => { %>
            <div class="form-group">
                <label for="<%= section.section_name %>">
                    <%= section.section_name.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %>
                </label>
                <% if (section.content && section.content.length > 100) { %>
                    <textarea 
                        class="form-control editor-textarea"
                        name="<%= section.section_name %>" 
                        id="<%= section.section_name %>"
                        rows="10"
                        placeholder="Enter your content here. Use the toolbar for formatting."
                    ><%= section.content %></textarea>
                <% } else { %>
                    <input 
                        type="text" 
                        class="form-control"
                        name="<%= section.section_name %>" 
                        id="<%= section.section_name %>" 
                        value="<%= section.content || '' %>"
                        placeholder="Enter your content here"
                    >
                <% } %>
                <% if (sectionHelp[section.section_name]) { %>
                    <small style="color: #666;"><%= sectionHelp[section.section_name] %></small>
                <% } %>
            </div>
        <% }); %>

        <div style="margin-top: 30px;">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="/admin/pages" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<link rel="stylesheet" href="/css/rich-editor.css">
<script src="/js/rich-editor.js"></script>